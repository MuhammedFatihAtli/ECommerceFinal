@using ECommerce.Application.DTOs.CategoryDTOs
@model CategoryEditDTO

@{
    ViewData["Title"] = "Kategori Düzenle";
    Layout = "_AdminLayout";
}

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="mb-0">Kategori Düzenle</h2>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Geri Dön
            </a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-warning text-dark">
                <h5 class="mb-0">
                    <i class="fas fa-edit me-2"></i>Kategori Bilgileri
                </h5>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post" autocomplete="off">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    
                    <input type="hidden" asp-for="Id" />
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Name" class="form-label fw-semibold">
                                    <i class="fas fa-tag me-1"></i>Kategori Adı
                                </label>
                                <input asp-for="Name" class="form-control" placeholder="Kategori adı giriniz..." />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Description" class="form-label fw-semibold">
                                    <i class="fas fa-info-circle me-1"></i>Açıklama
                                </label>
                                <textarea asp-for="Description" class="form-control" rows="3" placeholder="Kategori açıklaması giriniz..."></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="d-flex justify-content-end gap-2">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-times me-2"></i>Vazgeç
                        </a>
                        <button type="submit" class="btn btn-warning">
                            <i class="fas fa-save me-2"></i>Güncelle
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
} 