@using ECommerce.Application.DTOs.ProductDTOs
@model ProductCreateDTO
@{
    ViewData["Title"] = "Yeni Ürün";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="mb-4">Yeni Ürün</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data" class="shadow-sm p-4 rounded bg-white">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
    <div class="mb-3">
        <label asp-for="Name" class="form-label">Ürün Adı</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Description" class="form-label">Açıklama</label>
        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="CategoryId" class="form-label">Kategori</label>
        <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.Categories">
            <option value="">Kategori Seçiniz</option>
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="SellerId" class="form-label">Satıcı Seç</label>
        <select asp-for="SellerId" class="form-select" asp-items="ViewBag.Sellers">
            <option value="0">-- Satıcı Seçin (seçilmezse admin’e eklenir) --</option>
        </select>
        <span asp-validation-for="SellerId" class="text-danger"></span>
    </div>


    <div class="mb-3">
        <label asp-for="Price" class="form-label">Fiyat</label>
        <input asp-for="Price" class="form-control" type="number" step="0.01" min="0" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Stock" class="form-label">Stok</label>
        <input asp-for="Stock" class="form-control" type="number" min="0" />
        <span asp-validation-for="Stock" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="ImageFile" class="form-label">Ürün Resmi</label>
        <input asp-for="ImageFile" class="form-control" type="file" accept="image/*" />
        <span asp-validation-for="ImageFile" class="text-danger"></span>
        <small class="form-text text-muted">Desteklenen formatlar: JPG, PNG, GIF. Maksimum dosya boyutu: 5MB</small>
    </div>
    <button type="submit" class="btn btn-primary me-2">Ekle</button>
    <a asp-action="Index" class="btn btn-secondary">Vazgeç</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}