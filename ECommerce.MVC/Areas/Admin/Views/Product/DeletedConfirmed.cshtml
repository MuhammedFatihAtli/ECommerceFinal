@using ECommerce.Application.DTOs.ProductDTOs
@model ProductDTO
@{
    ViewData["Title"] = "Ürün Sil";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="mb-4">Ürün Sil</h2>

<div class="alert alert-warning d-flex align-items-center" role="alert">
    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-exclamation-triangle me-2" viewBox="0 0 16 16">
        <path d="M7.938 2.016a.13.13 0 0 1 .125 0l6.857 11.856c.06.104.01.228-.104.228H1.184a.13.13 0 0 1-.104-.228L7.938 2.016zm.823-1.447c-.566-.982-1.98-.982-2.546 0L.358 12.425C-.208 13.407.522 14.5 1.684 14.5h12.632c1.162 0 1.892-1.093 1.326-2.075L8.761.569zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1-2.002 0 1 1 0 0 1 2.002 0z"/>
    </svg>
    <div>
        <strong>Dikkat!</strong> Bu ürünü silmek üzeresiniz. Bu işlem geri alınamaz.<br>
        <span class="fw-semibold">Ürün:</span> <span class="text-dark">@Model.Name</span>
    </div>
</div>

<dl class="row mb-4">
    <dt class="col-sm-2">Id</dt>
    <dd class="col-sm-10">@Model.Id</dd>
    <dt class="col-sm-2">Adı</dt>
    <dd class="col-sm-10">@Model.Name</dd>
    <dt class="col-sm-2">Kategori</dt>
    <dd class="col-sm-10">@Model.CategoryName</dd>
    <dt class="col-sm-2">Fiyat</dt>
    <dd class="col-sm-10">@Model.Price.ToString("C2")</dd>
    <dt class="col-sm-2">Stok</dt>
    <dd class="col-sm-10">@Model.Stock</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger me-2">Evet, Sil</button>
    <a asp-action="Index" class="btn btn-secondary">Vazgeç</a>
</form>