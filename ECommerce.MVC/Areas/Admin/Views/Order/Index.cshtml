@using ECommerce.Application.DTOs.OrderDTOs
@model IEnumerable<OrderDTO>

@{
    ViewData["Title"] = "Siparişler";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="mb-4">Siparişler</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<table class="table table-striped table-hover align-middle shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>Id</th>
            <th>Müşteri</th>
            <th>Tarih</th>
            <th>Durum</th>
            <th style="width: 220px;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.UserFullName</td>
                <td>@order.OrderDate.ToString("dd.MM.yyyy")</td>
                <td>@order.Status</td>
                <td>
                    <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-info btn-sm me-2">Detay</a>
                    <a asp-action="UpdateStatus" asp-route-id="@order.Id" class="btn btn-warning btn-sm me-2">Durum Güncelle</a>
                    <form asp-action="Delete" asp-route-id="@order.Id" method="post" class="d-inline" onsubmit="return confirm('Bu siparişi silmek istediğinize emin misiniz?');">
                        <button type="submit" class="btn btn-danger btn-sm">Sil</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>