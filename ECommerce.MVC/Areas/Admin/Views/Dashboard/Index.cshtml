@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "_AdminLayout";
}

<div class="row">
    <div class="col-12">
        <h1 class="display-4 text-center mb-4" style="color: #232526; font-weight: 700;">
            Hoş Geldiniz, @User.Identity?.Name!
        </h1>
        <p class="lead text-center mb-5" style="color: #666;">
            E-Ticaret Admin Paneli
        </p>
    </div>
</div>

<div class="row g-4">
    <div class="col-md-3">
        <div class="card h-100 border-0 shadow-sm" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
            <div class="card-body text-center text-white">
                <i class="fas fa-users fa-3x mb-3"></i>
                <h5 class="card-title">Kullanıcılar</h5>
                <p class="card-text display-6" id="userCount">Yükleniyor...</p>
                <a href="/Admin/User" class="btn btn-light btn-sm">Yönet</a>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card h-100 border-0 shadow-sm" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);">
            <div class="card-body text-center text-white">
                <i class="fas fa-tags fa-3x mb-3"></i>
                <h5 class="card-title">Kategoriler</h5>
                <p class="card-text display-6">0</p>
                <a href="/Admin/Category" class="btn btn-light btn-sm">Yönet</a>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card h-100 border-0 shadow-sm" style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);">
            <div class="card-body text-center text-white">
                <i class="fas fa-box fa-3x mb-3"></i>
                <h5 class="card-title">Ürünler</h5>
                <p class="card-text display-6">0</p>
                <a href="/Admin/Product" class="btn btn-light btn-sm">Yönet</a>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card h-100 border-0 shadow-sm" style="background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);">
            <div class="card-body text-center text-white">
                <i class="fas fa-shopping-cart fa-3x mb-3"></i>
                <h5 class="card-title">Siparişler</h5>
                <p class="card-text display-6">0</p>
                <a href="/Admin/Order" class="btn btn-light btn-sm">Yönet</a>
            </div>
        </div>
    </div>
</div>

<div class="row mt-5">
    <div class="col-12">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Hızlı İşlemler</h5>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-6">
                        <a href="/Admin/User/Create" class="btn btn-outline-primary w-100">
                            <i class="fas fa-user-plus me-2"></i>Yeni Kullanıcı Ekle
                        </a>
                    </div>
                    <div class="col-md-6">
                        <a href="/Admin/Category/Create" class="btn btn-outline-success w-100">
                            <i class="fas fa-folder-plus me-2"></i>Yeni Kategori Ekle
                        </a>
                    </div>
                    <div class="col-md-6">
                        <a href="/Admin/Product/Create" class="btn btn-outline-info w-100">
                            <i class="fas fa-plus me-2"></i>Yeni Ürün Ekle
                        </a>
                    </div>
                    <div class="col-md-6">
                        <a href="/Admin/Profile" class="btn btn-outline-warning w-100">
                            <i class="fas fa-user-cog me-2"></i>Profil Ayarları
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
}

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            fetch('/Admin/User/GetUserCount')
                .then(response => response.json())
                .then(count => {
                    document.getElementById('userCount').innerText = count;
                })
                .catch(error => {
                    console.error("Kullanıcı sayısı alınamadı:", error);
                });
        });
    </script>
}