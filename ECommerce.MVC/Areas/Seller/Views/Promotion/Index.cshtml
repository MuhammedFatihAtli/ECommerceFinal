@model ECommerce.Application.VMs.Promotion.PromotionVM
@{
    ViewData["Title"] = "Promosyonlarım";
    Layout = "~/Areas/Seller/Views/Shared/_SellerLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Promosyonlarım</h2>
    <a asp-area="Seller" asp-controller="Promotion" asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Yeni Promosyon Ekle
    </a>
</div>

<div class="row">
    <!-- Sol taraf: Promosyon listesi -->
    <div class="col-md-7">
        <div class="card mb-4">
            <div class="card-header bg-white border-bottom-0">
                <h5 class="mb-0 text-dark">Mevcut Promosyonlar</h5>
            </div>
            <div class="card-body">
                @if (Model.Promotions != null && Model.Promotions.Any())
                {
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Adı</th>
                                <th>İndirim (%)</th>
                                <th>Başlangıç</th>
                                <th>Bitiş</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var promo in Model.Promotions)
                            {
                                <tr>
                                    <td>@promo.Name</td>
                                    <td>@promo.DiscountRate</td>
                                    <td>@promo.StartDate.ToString("dd.MM.yyyy")</td>
                                    <td>@promo.EndDate.ToString("dd.MM.yyyy")</td>
                                    <td>
                                        <form asp-area="Seller" asp-controller="Promotion" asp-action="Delete" method="post" onsubmit="return confirm('Bu promosyonu silmek istediğinizden emin misiniz?');" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@promo.Id" />
                                            <button type="submit" class="btn btn-danger btn-sm">Sil</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="text-muted">Henüz promosyon eklenmemiş.</div>
                }
            </div>
        </div>
    </div>

    <!-- Sağ taraf: Ürünler ve promosyon atama -->
    <div class="col-md-5">
        <div class="card">
            <div class="card-header bg-white border-bottom-0">
                <h5 class="mb-0 text-dark">Ürünlerim ve Promosyon Atama</h5>
            </div>
            <div class="card-body">
                @if (Model.Products != null && Model.Products.Any())
                {
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Ürün</th>
                                <th>Promosyon</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var product in Model.Products)
                            {
                                <tr>
                                    <td>@product.Name</td>
                                    <td>
                                        @if (product.PromotionId != null)
                                        {
                                            var promo = Model.Promotions.FirstOrDefault(p => p.Id == product.PromotionId);
                                            @promo?.Name
                                        }
                                        else
                                        {
                                            <span class="text-muted">Yok</span>
                                        }
                                    </td>
                                    <td>
                                        <a asp-area="Seller" asp-controller="Promotion" asp-action="AssignPromotion" asp-route-productId="@product.Id" class="btn btn-outline-primary btn-sm">
                                            Ata / Değiştir
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="text-muted">Ürününüz yok.</div>
                }
            </div>
        </div>
    </div>
</div>
