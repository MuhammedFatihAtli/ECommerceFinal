@{
    Layout = null;
    var sellerName = User.Identity?.Name ?? "Seller";
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Seller Panel | @ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        body {
            background: linear-gradient(135deg, #232526 0%, #414345 100%);
            font-family: 'Segoe UI', 'Roboto', Arial, sans-serif;
            min-height: 100vh;
            color: #232526;
        }

        .seller-navbar {
            background: rgba(40, 40, 44, 0.95) !important;
            box-shadow: 0 8px 32px 0 rgba(0,0,0,0.35);
            border-radius: 0 0 32px 32px;
            backdrop-filter: blur(8px);
        }

            .seller-navbar .navbar-brand {
                font-weight: bold;
                font-size: 1.75rem;
                color: #82d4bb !important;
                text-shadow: 1px 2px 8px #111;
            }

            .seller-navbar .nav-link {
                color: #e0e0e0 !important;
                font-weight: 500;
                margin: 0 0.5rem;
                transition: color 0.2s, transform 0.2s;
                text-shadow: 0 1px 2px #232526;
            }

                .seller-navbar .nav-link:hover, .seller-navbar .nav-link.active {
                    color: #82d4bb !important;
                    transform: translateY(-2px) scale(1.08);
                    text-shadow: 0 2px 8px #111;
                }

        .main-content-seller {
            min-height: 70vh;
            padding: 2rem 0;
            display: flex;
            justify-content: center;
            align-items: flex-start;
            background: linear-gradient(135deg, #f9f9f9 60%, #eef0f4 100%);
            border-radius: 32px;
            box-shadow: 0 8px 32px 0 rgba(0,0,0,0.08);
            margin-top: 2rem;
            margin-bottom: 2rem;
        }

        .content-wrapper-seller {
            width: 100%;
            max-width: 1100px;
            background: rgba(255,255,255,0.95);
            border-radius: 32px;
            box-shadow: 0 8px 32px 0 rgba(180,180,180,0.2);
            padding: 2.5rem 2rem;
            margin: 0 auto;
        }

        .footer-seller {
            background: rgba(40, 40, 44, 0.95);
            color: #b0b0b0;
            padding: 1.5rem 0;
            text-align: center;
            letter-spacing: 1px;
            box-shadow: 0 -4px 24px 0 rgba(0,0,0,0.18);
            border-radius: 32px 32px 0 0;
        }

        .seller-avatar {
            width: 36px;
            height: 36px;
            border-radius: 50%;
            background: #eef0f4;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            color: #232526;
            margin-left: 1rem;
            box-shadow: 0 2px 8px #eef0f4;
        }
    </style>
    @RenderSection("Styles", required: false)
</head>
<body>
    <nav class="navbar navbar-expand-lg seller-navbar shadow-sm">
        <div class="container">
            <a class="navbar-brand" href="/Seller/Dashboard">SellerPanel</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSellerNav"
                    aria-controls="navbarSellerNav" aria-expanded="false" aria-label="Menüyü Aç">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSellerNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link" href="/Seller/Dashboard">Dashboard</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Seller/Product">Ürünlerim</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Seller/Order">Siparişler</a></li>
                </ul>
                <div class="d-flex align-items-center">
                    <span class="seller-avatar">@sellerName.Substring(0, 1).ToUpper()</span>
                    <span class="ms-2" style="color:#e0e0e0;">@sellerName</span>
                    <a href="/Account/Logout" class="btn btn-sm ms-3" style="background:#82d4bb; color:#232526; border-radius:16px; font-weight:600;">Çıkış</a>
                </div>
            </div>
        </div>
    </nav>

    <main class="container main-content-seller">
        <div class="content-wrapper-seller">
            @RenderBody()
        </div>
    </main>

    <footer class="footer-seller">
        <div class="container">
            <span>© @DateTime.Now.Year Seller Panel. Tüm hakları saklıdır.</span>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
