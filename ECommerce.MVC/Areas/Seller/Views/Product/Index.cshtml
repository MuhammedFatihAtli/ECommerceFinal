@model IEnumerable<ECommerce.Application.DTOs.ProductDTOs.ProductDTO>
@{
    ViewBag.Title = "Ürünlerim";
    Layout = "~/Areas/Seller/Views/Shared/_SellerLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Ürünlerim</h2>
    <a asp-area="Seller" asp-controller="Product" asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Yeni Ürün Ekle
    </a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row">
    @if (Model != null && Model.Any())
    {
        @foreach (var product in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="position-relative">
                        @if (!string.IsNullOrEmpty(product.ImagePath))
                        {
                            <img src="@product.ImagePath" class="card-img-top" alt="@product.Name" style="height: 200px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                                <i class="bi bi-image text-muted" style="font-size: 3rem;"></i>
                            </div>
                        }
                        <div class="position-absolute top-0 end-0 m-2">
                            @if (product.Stock > 0)
                            {
                                <span class="badge bg-success">Stokta</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Stok Yok</span>
                            }
                        </div>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text text-muted">@product.CategoryName</p>
                        @if (!string.IsNullOrEmpty(product.Description))
                        {
                            <p class="card-text">@(product.Description.Length > 100 ? product.Description.Substring(0, 100) + "..." : product.Description)</p>
                        }
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="h5 text-primary mb-0">₺@product.Price.ToString("N2")</span>
                            <small class="text-muted">Stok: @product.Stock</small>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent">
                        <div class="btn-group w-100" role="group">
                            <a asp-area="Seller" asp-controller="Product" asp-action="Edit" asp-route-id="@product.Id" class="btn btn-outline-warning btn-sm">Düzenle</a>
                            <a asp-area="Seller" asp-controller="Product" asp-action="EditStock" asp-route-id="@product.Id" class="btn btn-outline-info btn-sm">Stok</a>
                            <button onclick="deleteProduct(@product.Id)" class="btn btn-outline-danger btn-sm">Sil</button>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12">
            <div class="text-center py-5">
                <i class="bi bi-box text-muted" style="font-size: 4rem;"></i>
                <h4 class="mt-3 text-muted">Henüz ürününüz bulunmuyor</h4>
                <p class="text-muted">İlk ürününüzü eklemek için aşağıdaki butona tıklayın.</p>
                <a asp-area="Seller" asp-controller="Product" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> İlk Ürününüzü Ekleyin
                </a>
            </div>
        </div>
    }
</div>

<script>
    function deleteProduct(productId) {
        if (confirm('Bu ürünü silmek istediğinizden emin misiniz?')) {
            var form = document.createElement('form');
            form.method = 'POST';
            form.action = '/Seller/Product/Delete/' + productId;

            var token = document.createElement('input');
            token.type = 'hidden';
            token.name = '__RequestVerificationToken';
            token.value = document.querySelector('input[name="__RequestVerificationToken"]').value;

            form.appendChild(token);
            document.body.appendChild(form);
            form.submit();
        }
    }
</script>