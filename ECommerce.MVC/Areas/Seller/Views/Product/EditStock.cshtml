@model ECommerce.Application.DTOs.ProductDTOs.ProductDTO
@{
    ViewBag.Title = "Stok Düzenle";
    Layout = "~/Areas/Seller/Views/Shared/_SellerLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Stok Düzenle: @Model.Name</h2>
    <a asp-area="Seller" asp-controller="Product" asp-action="MyProducts" class="btn btn-secondary">Geri Dön</a>
</div>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Stok Bilgileri</h5>
            </div>
            <div class="card-body">
                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="text-center">
                            @if (!string.IsNullOrEmpty(Model.ImagePath))
                            {
                                <img src="@Model.ImagePath" class="img-fluid rounded" alt="@Model.Name" style="max-height: 150px;">
                            }
                            else
                            {
                                <div class="border rounded p-3 bg-light">
                                    <i class="bi bi-image text-muted" style="font-size: 2rem;"></i>
                                </div>
                            }
                        </div>
                    </div>
                    <div class="col-md-6">
                        <h6>@Model.Name</h6>
                        <p class="text-muted mb-1">@Model.CategoryName</p>
                        <p class="h5 text-primary mb-0">₺@Model.Price.ToString("N2")</p>
                        <small class="text-muted">Mevcut Stok: @Model.Stock</small>
                    </div>
                </div>

                <form asp-area="Seller" asp-controller="Product" asp-action="EditStock" method="post">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="Name" />
                    <input type="hidden" asp-for="Description" />
                    <input type="hidden" asp-for="Price" />
                    <input type="hidden" asp-for="CategoryId" />
                    <input type="hidden" asp-for="SellerId" />
                    <input type="hidden" asp-for="ImagePath" />

                    <div class="mb-3">
                        <label asp-for="Stock" class="form-label">Yeni Stok Miktarı</label>
                        <input asp-for="Stock" class="form-control" type="number" min="0" placeholder="Stok miktarını giriniz" />
                        <span asp-validation-for="Stock" class="text-danger"></span>
                        <small class="text-muted">Stok miktarını güncelleyebilirsiniz</small>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-area="Seller" asp-controller="Product" asp-action="MyProducts" class="btn btn-secondary">İptal</a>
                        <button type="submit" class="btn btn-info">
                            <i class="bi bi-check-circle"></i> Stoku Güncelle
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}