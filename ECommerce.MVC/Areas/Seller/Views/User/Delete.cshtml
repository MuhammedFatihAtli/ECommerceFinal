@foreach (var user in Model)
{
    <tr>
        <td>@user.Id</td>
        <td>@user.UserName</td>
        
        <td>
            <form asp-action="Delete" asp-route-id="@user.Id" method="post" class="d-inline" onsubmit="return confirm('Bu kullanıcıyı silmek istediğinize emin misiniz?');">
                <button type="submit" class="btn btn-danger btn-sm">Sil</button>
            </form>
        </td>
    </tr>
}