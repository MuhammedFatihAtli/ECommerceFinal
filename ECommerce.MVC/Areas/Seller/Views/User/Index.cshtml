@using ECommerce.Application.DTOs.UserDTOs
@using ECommerce.Domain.Entities
@model IEnumerable<UserDTO>
@{
    ViewData["Title"] = "Kullanıcılar";
    Layout = "~/Areas/Seller/Views/Shared/_SellerLayout.cshtml";
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<h2 class="mb-4">Kullanıcılar</h2>

<table class="table table-striped table-hover align-middle shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Kullanıcı Adı</th>
            <th>Ad Soyad</th>
            <th>E-posta</th>
            <th>Durum</th>
            <th style="width: 200px;">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>@user.FullName</td>
                <td>@user.Email</td>
                <td>
                    @if (user.Status)
                    {
                        <span class="badge bg-success">Aktif</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Pasif</span>
                    }
                </td>
                <td>
                    <a asp-area="Admin" asp-controller="User" asp-action="Edit" asp-route-id="@user.Id" class="btn btn-warning btn-sm me-2">
                        <i class="fas fa-edit me-1"></i>Düzenle
                    </a>
                    <form asp-area="Seller" asp-controller="User" asp-action="Delete" asp-route-id="@user.Id" method="post" class="d-inline" onsubmit="return confirm('Bu kullanıcıyı silmek istediğinize emin misiniz?');">
                        <button type="submit" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash me-1"></i>Sil
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-area="Seller" asp-controller="User" asp-action="Create" class="btn btn-success mt-3">
    <i class="fas fa-plus me-2"></i>Yeni Kullanıcı Ekle
</a>