@model ECommerce.Application.VMs.Promotion.PromotionVM
@{
    ViewData["Title"] = "Kampanyalarım";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12 mb-4">
        <div class="d-flex justify-content-between align-items-center">
            <h2 class="mb-0">
                <i class="fas fa-gift me-2"></i>
                Kampanyalarım
            </h2>
        </div>
    </div>
</div>

<div class="row">
    <!-- Kampanya İstatistikleri -->
    <div class="col-lg-4 mb-4">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-transparent">
                <h5 class="mb-0">
                    <i class="fas fa-chart-bar me-2"></i>
                    Kampanya İstatistikleri
                </h5>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-6 mb-3">
                        <div class="p-3 bg-primary bg-opacity-10 rounded">
                            <i class="fas fa-gift text-primary fs-2 mb-2"></i>
                            <h4 class="mb-1">@Model.Promotions.Count()</h4>
                            <small class="text-muted">Toplam Kampanya</small>
                        </div>
                    </div>
                    <div class="col-6 mb-3">
                        <div class="p-3 bg-success bg-opacity-10 rounded">
                            <i class="fas fa-box text-success fs-2 mb-2"></i>
                            <h4 class="mb-1">@Model.Products.Count()</h4>
                            <small class="text-muted">Toplam Ürün</small>
                        </div>
                    </div>
                    <div class="col-6 mb-3">
                        <div class="p-3 bg-warning bg-opacity-10 rounded">
                            <i class="fas fa-percentage text-warning fs-2 mb-2"></i>
                            <h4 class="mb-1">
                                @(Model.Promotions.Any() ? Model.Promotions.Average(p => p.DiscountRate).ToString("F0") : "0")%
                            </h4>
                            <small class="text-muted">Ortalama İndirim</small>
                        </div>
                    </div>
                    <div class="col-6 mb-3">
                        <div class="p-3 bg-info bg-opacity-10 rounded">
                            <i class="fas fa-calendar text-info fs-2 mb-2"></i>
                            <h4 class="mb-1">@Model.Promotions.Count(p => p.EndDate > DateTime.Now)</h4>
                            <small class="text-muted">Aktif Kampanya</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Kampanya Kartları -->
    <div class="col-lg-8 mb-4">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-transparent">
                <h5 class="mb-0">
                    <i class="fas fa-tags me-2"></i>
                    Kampanyalar
                </h5>
            </div>
            <div class="card-body">
                @if (Model.Promotions.Any())
                {
                        <div class="row">
                        @foreach (var promotion in Model.Promotions)
                        {
                                    <div class="col-md-6 mb-4">
                                        <div class="card border-0 shadow-sm h-100 promotion-card">
                                            <div class="card-header bg-transparent">
                                                <div class="d-flex justify-content-between align-items-center">
                                                    <h6 class="mb-0">@promotion.Name</h6>
                                                    <span class="badge bg-@(promotion.EndDate > DateTime.Now ? "success" : "danger")">
                                                @(promotion.EndDate > DateTime.Now ? "Aktif" : "Süresi Dolmuş")
                                                    </span>
                                                </div>
                                            </div>
                                            <div class="card-body">
                                                <div class="row text-center mb-3">
                                                    <div class="col-6">
                                                        <div class="p-2 bg-primary bg-opacity-10 rounded">
                                                            <small class="text-muted">İndirim Oranı</small>
                                                            <div class="h5 text-primary mb-0">%@promotion.DiscountRate</div>
                                                        </div>
                                                    </div>
                                                    <div class="col-6">
                                                        <div class="p-2 bg-warning bg-opacity-10 rounded">
                                                            <small class="text-muted">Bitiş Tarihi</small>
                                                            <div class="h6 text-warning mb-0">@promotion.EndDate.ToString("dd/MM/yyyy")</div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="d-flex gap-2">
                                                    <button class="btn btn-outline-primary btn-sm" onclick="showPromotionDetails('@promotion.Id')">
                                                        <i class="fas fa-eye me-1"></i> Detaylar
                                                    </button>
                                                    <a asp-controller="Promotion" asp-action="Edit" asp-route-id="@promotion.Id" class="btn btn-outline-warning btn-sm">
                                                        <i class="fas fa-edit me-1"></i> Düzenle
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                        }
                        </div>
                }
                else
                {
                        <div class="text-center py-4">
                            <i class="fas fa-gift text-muted fs-1 mb-3"></i>
                            <h5 class="text-muted">Henüz Kampanya Yok</h5>
                            <p class="text-muted">Aktif kampanyanız bulunmuyor.</p>
                        </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Ürünler -->
<div class="row">
    <div class="col-12">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-transparent">
                <h5 class="mb-0">
                    <i class="fas fa-box me-2"></i>
                    Kampanya Ürünleriniz
                </h5>
            </div>
            <div class="card-body">
                @if (Model.Products.Any())
                {
                        <div class="row">
                        @foreach (var product in Model.Products)
                        {
                                    <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                                        <div class="card border-0 shadow-sm h-100 product-card">
                                            <div class="position-relative">
                                        @if (!string.IsNullOrEmpty(product.ImagePath))
                                        {
                                                        <img src="@product.ImagePath" class="card-img-top product-image" alt="@product.Name" />
                                        }
                                        else
                                        {
                                                        <div class="card-img-top product-image-placeholder d-flex align-items-center justify-content-center">
                                                            <i class="fas fa-image text-muted fs-1"></i>
                                                        </div>
                                        }
                                                <div class="position-absolute top-0 end-0 m-2">
                                                    <span class="badge bg-primary">@product.CategoryName</span>
                                                </div>
                                            </div>
                                            <div class="card-body d-flex flex-column">
                                                <h6 class="card-title text-truncate" title="@product.Name">@product.Name</h6>
                                                <p class="card-text text-muted small flex-grow-1">
                                            @(string.IsNullOrEmpty(product.Description) ? "Açıklama yok" : product.Description)
                                                </p>
                                                <div class="mt-auto">
                                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                                        <span class="h5 text-primary mb-0">@product.Price.ToString("C")</span>
                                                        <span class="badge bg-@(product.Stock > 0 ? "success" : "danger")">
                                                    @(product.Stock > 0 ? $"{product.Stock} adet" : "Stokta yok")
                                                        </span>
                                                    </div>
                                                    <div class="d-grid gap-2">
                                                        <button class="btn btn-outline-primary btn-sm" onclick="showProductDetails('@product.Id')">
                                                            <i class="fas fa-eye me-1"></i>
                                                            Detaylar
                                                        </button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                        }
                        </div>
                }
                else
                {
                        <div class="text-center py-4">
                            <i class="fas fa-box text-muted fs-1 mb-3"></i>
                            <h5 class="text-muted">Henüz Ürün Yok</h5>
                            <p class="text-muted">Kampanya ürününüz bulunmuyor.</p>
                        </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Kampanya Detay Modal -->
<div class="modal fade" id="promotionDetailModal" tabindex="-1" aria-labelledby="promotionDetailModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="promotionDetailModalLabel">Kampanya Detayları</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="promotionDetailContent">
                <!-- Kampanya detayları buraya yüklenecek -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
            </div>
        </div>
    </div>
</div>

<style>
    .promotion-card {
        transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    }

    .promotion-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 25px rgba(0,0,0,0.15) !important;
    }

    .product-card {
        transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    }

    .product-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 25px rgba(0,0,0,0.15) !important;
    }

    .product-image {
        height: 200px;
        object-fit: cover;
    }

    .product-image-placeholder {
        height: 200px;
        background-color: #f8f9fa;
    }

    .card-title {
        font-size: 1rem;
        font-weight: 600;
    }

    .badge {
        font-size: 0.75rem;
    }
</style>

