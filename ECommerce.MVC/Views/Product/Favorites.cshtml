@model IEnumerable<ECommerce.Domain.Entities.Favorite>
@{
    ViewBag.Title = "Favorilerim";
}
<h2 class="mb-4">Favori Ürünlerim</h2>
@if (!Model.Any())
{
    <div class="alert alert-info">Henüz favori ürününüz yok.</div>
}
else
{
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var fav in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <img src="@(string.IsNullOrEmpty(fav.Product.ImagePath) ? "/images/default-product.png" : fav.Product.ImagePath)" class="card-img-top" alt="@fav.Product.Name" style="max-height:200px;object-fit:contain;">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@fav.Product.Name</h5>
                        <p class="card-text">@fav.Product.Description</p>
                        <span class="badge bg-secondary mb-2">@fav.Product.Category?.Name</span>
                        <h6 class="card-subtitle mb-2 text-success">@fav.Product.Price.ToString("C")</h6>
                        <form asp-action="RemoveFromFavorites" asp-controller="Product"  method="post" class="mt-2">
                            <input type="hidden" name="productId" value="@fav.Product.Id" />
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-danger btn-sm w-100">Favorilerden Çıkar</button>
                        </form>
                        <form asp-action="AddToCart" asp-controller="Product"  method="post" class="mt-2">
                            <input type="hidden" name="productId" value="@fav.Product.Id" />
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-success btn-sm w-100">Sepete Ekle</button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
} 