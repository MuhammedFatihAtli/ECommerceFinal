@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-8 text-center">
        <h1 class="display-5 text-danger mb-4">Bir hata oluştu!</h1>
        <p class="lead">Üzgünüz, bir hata ile karşılaşıldı. Lütfen daha sonra tekrar deneyin.</p>
        @if (Model?.RequestId != null)
        {
            <p>
                <strong>Hata Kodu:</strong> <code>@Model.RequestId</code>
            </p>
        }
        <a href="/" class="btn btn-primary mt-3">Ana Sayfa</a>
    </div>
</div>











