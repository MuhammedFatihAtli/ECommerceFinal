@{
    
    Layout = null;
    var userName = User.Identity?.Name ?? "Misafir";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Guest </title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <style>
        body {
            background: linear-gradient(135deg, #232526 0%, #414345 100%);
            font-family: 'Segoe UI', 'Roboto', Arial, sans-serif;
            min-height: 100vh;
            color: #e0e0e0;
        }

        .guest-navbar {
            background: rgba(30, 30, 34, 0.95);
            box-shadow: 0 8px 32px 0 rgba(0,0,0,0.35), 0 1.5px 0 #232526;
            border-radius: 0 0 32px 32px;
            backdrop-filter: blur(8px);
        }

            .guest-navbar .navbar-brand {
                font-weight: bold;
                font-size: 2rem;
                letter-spacing: 2px;
                color: #e0e0e0 !important;
                text-shadow: 1px 2px 8px #111;
            }

            .guest-navbar .nav-link {
                color: #e0e0e0 !important;
                font-weight: 500;
                margin: 0 0.5rem;
                transition: color 0.2s, transform 0.2s, box-shadow 0.3s;
                text-shadow: 0 1px 2px #232526;
                position: relative;
                padding: 0.375rem 0.75rem;
            }

                .guest-navbar .nav-link:hover,
                .guest-navbar .nav-link.active {
                    color: #fff !important;
                    transform: translateY(-2px) scale(1.08);
                    text-shadow: 0 2px 8px #111;
                    box-shadow: 0 0 8px 2px rgba(255, 255, 255, 0.6);
                    border-radius: 8px;
                }

        .main-content-guest {
            min-height: 70vh;
            padding: 2rem 0;
            display: flex;
            justify-content: center;
            align-items: flex-start;
            background: linear-gradient(135deg, #f5f6fa 60%, #ece5da 100%);
            border-radius: 32px;
            box-shadow: 0 8px 32px 0 rgba(0,0,0,0.10), 0 1.5px 0 #ece5da;
            margin-top: 2rem;
            margin-bottom: 2rem;
        }

        .content-wrapper-guest {
            width: 100%;
            max-width: 1100px;
            background: rgba(255,255,255,0.92);
            border-radius: 32px;
            box-shadow: 0 8px 32px 0 rgba(200,200,200,0.18), 0 1.5px 0 #ece5da;
            padding: 2.5rem 2rem;
            margin: 0 auto;
            color: #232526;
        }

        .footer-guest {
            background: rgba(30, 30, 34, 0.95);
            color: #b0b0b0;
            padding: 1.5rem 0;
            text-align: center;
            letter-spacing: 1px;
            box-shadow: 0 -4px 24px 0 rgba(0,0,0,0.18);
            border-radius: 32px 32px 0 0;
        }

        .guest-avatar {
            width: 36px;
            height: 36px;
            border-radius: 50%;
            background: #ece5da;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            color: #232526;
            margin-left: 1rem;
            box-shadow: 0 2px 8px #ece5da;
        }
    </style>

    @RenderSection("Styles", required: false)
</head>
<body>
    <nav class="navbar navbar-expand-lg guest-navbar shadow-sm">
        <div class="container">
            <a class="navbar-brand" asp-controller="Dashboard" asp-action="Index">Guest</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarGuestNav"
                    aria-controls="navbarGuestNav" aria-expanded="false" aria-label="Menüyü Aç">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarGuestNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Dashboard" asp-action="Index">Anasayfa</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Product" asp-action="Index">Siparişler</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Promotion" asp-action="Index">Kuponlar</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Product" asp-action="Favorites">Favoriler</a>
                    </li>
                </ul>
                <div class="d-flex align-items-center">
                    <a asp-controller="Account" asp-action="Login" class="btn btn-outline-light btn-sm me-2" style="border-radius:16px; font-weight:600;">Giriş</a>
                    <a asp-area="" asp-controller="Cart" asp-action="Index" class="btn btn-warning btn-sm" style="border-radius:16px; font-weight:600;">
                        <i class="bi bi-cart3 me-1"></i> Sepete Git &rarr;
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <main class="container main-content-guest">
        <div class="content-wrapper-guest">
            @RenderBody()
        </div>
    </main>

    <footer class="footer-guest">
        <div class="container">
            <span>© @DateTime.Now.Year Guest Panel. Tüm hakları saklıdır.</span>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
